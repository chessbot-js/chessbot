{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.5.18",
  "homepage_url": "http://re-coders.com/chessbot",
  "default_locale": "en",
  "icons": {
	"128": "images/favicon-128x128.png",
	"512": "images/favicon-512x512.png"
  },
  "browser_action": {
	"default_icon"  : "images/favicon-128x128.png",
	"default_popup" : "layouts/popup.html",
	"default_title" : "__MSG_appShortName__"
  },
  "background": {
   "scripts": ["scripts/background.js"]
  },
  "content_scripts": [ {
	"js": [
		"scripts/jquery-2.0.3.js",
		"scripts/chess_controller.js",
		"scripts/popup.js"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"matches": [
		"http://*.chess.com/*", "http://chess.com/*",
		"http://*.lichess.org/*", "http://lichess.org/*"
	]
  } ],
  "externally_connectable": {
  	"matches": [
		"*://*.chess.com/*", "*://chess.com/*",
		"*://*.lichess.org/*", "*://lichess.org/*"
	]
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://betacssjs.chesscomfiles.com/*",
    "declarativeContent",
    "tabs"
  ]
}
